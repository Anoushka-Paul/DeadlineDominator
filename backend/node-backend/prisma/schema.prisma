generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  createdAt DateTime   @default(now())

  deadlines Deadline[]
}

enum DeadlineStatus {
  DUE
  OVERDUE
  COMPLETED
}

model Deadline {
  id             String          @id @default(uuid())
  userId         String
  subject        String
  credits        Int
  description    String
  marks          Int
  dueDate        DateTime
  estimatedDays  Int
  status         DeadlineStatus
  priority       Boolean
  isCompleted    Boolean          @default(false)
  createdAt      DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
